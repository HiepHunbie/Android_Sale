<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fieldCaseAssignmentLV_item"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_date"
        android:background="@color/hint_text"
        android:layout_marginTop="@dimen/_9sdp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/calader"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:text="AAA"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/txtDate"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/_9sdp" />
        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@color/backgroud_all_item" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Text"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_date"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:paddingTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_toRightOf="@+id/fieldCaseAssignmentLV_iv_image">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="@dimen/_3sdp">
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:src="@drawable/overview_case_15"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp" />
            <TextView
                android:id="@+id/txt_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:text="aaaaa"
                android:layout_weight="0.3"
                android:paddingRight="@dimen/_5sdp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone">
            <TextView
                android:id="@+id/txt_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:text="aaaaaa"
                android:layout_weight="0.7"
                android:layout_gravity="center_vertical"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/backgroud_all_item"
        android:layout_below="@+id/Text"/>
</RelativeLayout>